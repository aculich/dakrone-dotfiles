#+BEGIN_SRC sh :results code :exports both :noweb yes :tangle `(file-name-sans-extension (buffer-name))`.zsh :var INDEX="${1:idxname}"
  curl -XDELETE "localhost:9200/$INDEX"
  echo
  curl -XPOST "localhost:9200/$INDEX" -d'{
    "mappings": {
      "doc": {
        "properties": {
          "body": {
            "type": "string"
          }$0
        }
      }
    }
  }'
  echo
#+END_SRC
